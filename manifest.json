{
    "manifest_version": 3,
    "name": "json-fmt",
    "description": "Safari/Chrome extension that formats JSON",
    "version": "0.1.0",
    "icons": { "16": "icon.svg", "48": "icon.svg", "128": "icon.svg" },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
    }],
    "background": { "service_worker": "background.js" },
    "permissions": ["scripting", "storage", "contextMenus"]
}
